@model IEnumerable<CleanerMVC.Models.Project>

@{
    ViewBag.Title = "PROJELER";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("YENİ PROJE OLUŞTUR", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Kategori Adı:
        </th>
        <th>
            Proje Adı:
        </th>
        <th>
            Proje Özeti:
        </th>
        <th>
            Proje Açıklaması:
        </th>
        <th>
            Proje Resmi:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.ParentCategory.CategoryName
        </td>
        <td>
            @item.ProjectName
        </td>
        <td>
            @item.ShortDesc
        </td>
        <td>
            @item.LongDesc
        </td>
        <td>
            @item.ImageURL
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ProjectID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.ProjectID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.ProjectID })
        </td>
    </tr>
}

</table>
