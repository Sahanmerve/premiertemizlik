@model CleanerMVC.Models.TeamMember

@{
    ViewBag.Title = "SİL";
}

<h2>@ViewBag.Title</h2>

<h3>SİLMEK İSTEDİĞİNİZE EMİN MİSİNİZ?</h3>
<div>
    <h4>ÇALIŞMA ARKADAŞIMIZ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Çalışan Resim:
        </dt>

        <dd>
            @Model.ImageURL
        </dd>

        <dt>
            Çalışan Ad Soyad:
        </dt>

        <dd>
            @Model.NameSurname
        </dd>

        <dt>
            Çalışan Açıklaması:
        </dt>

        <dd>
            @Model.Title
        </dd>

        <dt>
            Çalışan Sosyal Medya:
        </dt>

        <dd>
            @Model.SMLinks
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeye Geri Dön", "Index")
        </div>
    }
</div>
