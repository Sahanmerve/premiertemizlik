@model CleanerMVC.Models.Service

@{
    ViewBag.Title = "SERVİS DETAY";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>SERVİS</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Servis Adı:
        </dt>

        <dd>
            @Model.ServiceName
        </dd>

        <dt>
           Servis Açıklaması:
        </dt>

        <dd>
            @Model.Desc
        </dd>

        <dt>
            Servis Resmi:
        </dt>

        <dd>
            @Model.ImageURL
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.ServiceID }) |
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
