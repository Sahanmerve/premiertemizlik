<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Primer Temizlik Ve Organizasyon</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/gumby.css" rel="stylesheet" />
    <link href="~/Content/css/hoverex-all.css" rel="stylesheet" />
    <link href="~/Content/css/metrize.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Primer Temizlik Ve Organizasyon", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a href="~/Areas/Panel/Controllers/ContactsController.cs">Talep Formları</a></li>
                        <li><a href="~/Areas/Panel/Controllers/TeamMembersController.cs">Çalışan İşlemleri</a></li>
                        <li><a href="~/Areas/Panel/Controllers/ServicesController.cs">Servis İşlemleri</a></li>
                        <li><a href="~/Areas/Panel/Controllers/ProjectsController.cs">Proje İşlemleri</a></li>
                        <li><a href="~/Areas/Panel/Controllers/GeneralsController.cs">Genel Ayarlar</a></li>
                        <li><a href="~/Areas/Panel/Controllers/CategoriesController.cs">Kategori İşemleri</a></li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tüm Hakları Gizlidir</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
